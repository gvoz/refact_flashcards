<h2>Загрузить карточки</h2>

<%= simple_form_for :card_form, url: load_cards_path do |f| %>
  <div class="form-group">
    <%= f.input :url, label: 'URL страницы со словами',
                input_html: { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= f.input :search_selector, label: 'Селектор блока поиска',
                input_html: { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= f.input :original_selector, label: 'Селектор оригинального слова',
                input_html: { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= f.input :translated_selector, label: 'Селектор перевода слова',
                input_html: { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= f.input :block_id, label: 'Блок', collection: current_user.blocks.all.order('title'),
                      input_html: { class: 'form-control', required: true } %>
  </div>

  <%= f.button :submit, 'Загрузить', class: 'btn btn-default' %>
<% end %>
